root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 140

[*.{xml,kt,kts}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 140

[*.{kt,kts}]
indent_style = space
indent_size = 4
continuation_indent_size = 4
insert_final_newline = true
max_line_length = 140
ktlint_code_style = official

# Разрешить @Composable функциям начинаться с заглавной буквы
ktlint_function_naming_ignore_annotated = "Composable"

# Разрешить приватным переменным начинаться с "_"
ktlint_allow_underscore_in_private_variable_name = true

# Удалять лишние пустые строки в конце файлов
ktlint_remove_redundant_blank_lines = true

[*.md]
trim_trailing_whitespace = false