<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 
        RELEASE CONFIG
        Разрешает HTTP только для конкретных доменов (безопасно для production)
    -->
    
    <!-- Разрешить HTTP для demo.traccar.org -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">demo.traccar.org</domain>
    </domain-config>
    
    <!-- Разрешить HTTP для production сервера -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">44.216.176.38</domain>
    </domain-config>
    
    <!-- 
        Если у вас есть другие production серверы, добавьте их здесь:
        <domain-config cleartextTrafficPermitted="true">
            <domain includeSubdomains="false">your-production-server.com</domain>
        </domain-config>
    -->
    
    <!-- Базовая конфигурация (только HTTPS) -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>








