<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <!-- Отключаем cloud backup (облачный бэкап) для Android 12+ (API 31+) -->
    <!-- Явно исключаем все домены из бэкапа -->
    <cloud-backup>
        <exclude domain="database" path="." />
        <exclude domain="file" path="." />
        <exclude domain="sharedpref" path="." />
        <exclude domain="external" path="." />
        <exclude domain="root" path="." />
    </cloud-backup>
    
    <!-- Отключаем device transfer (перенос на другое устройство) для Android 12+ (API 31+) -->
    <!-- Явно исключаем все домены из переноса -->
    <device-transfer>
        <exclude domain="database" path="." />
        <exclude domain="file" path="." />
        <exclude domain="sharedpref" path="." />
        <exclude domain="external" path="." />
        <exclude domain="root" path="." />
    </device-transfer>
</data-extraction-rules>

