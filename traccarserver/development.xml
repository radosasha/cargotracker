<?xml version="1.0" encoding="UTF-8"?>
<properties>

    <!-- База данных -->
    <entry key='database.driver'>org.h2.Driver</entry>
    <entry key='database.url'>jdbc:h2:./target/database</entry>
    <entry key='database.user'>sa</entry>
    <entry key='database.password'></entry>

    <!-- Веб-интерфейс -->
    <entry key='web.port'>8082</entry>
    <entry key='web.path'>./web</entry>  <!-- ← Полная версия -->
    <entry key='web.debug'>false</entry> <!-- ← Release режим -->
    <entry key='web.console'>true</entry> <!-- ← Оставить консоль для разработки -->

    <!-- Геокодирование -->
    <entry key='geocoder.type'>locationiq</entry>
    <entry key='geocoder.key'>pk.0f147952a41c555a5b70614039fd148b</entry>

    <!-- Логирование -->
    <entry key='logger.console'>true</entry>
    <entry key='logger.queries'>false</entry>
    <entry key='logger.fullStackTraces'>true</entry>

    <!-- Медиа -->
    <entry key='media.path'>./target/media</entry>

</properties>